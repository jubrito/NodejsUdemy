<main>
    {{#if hasProducts}}
        <div class="grid">
            {{!-- block statements (not just some tests but loops and etc) in handlebars starts with # inside two brackets
            --}}
            {{!-- {{#if products.length > 0 }} We can't do this because in handlebars we can't handle any logic --}}
            {{#each products}}
                <article class="card product-item">
                    <header class="card__header">
                        <h1 class="product__title">
                            {{ this.title }}
                        </h1>
                    </header>
                    <div class="card__image">
                        <img src="https://i.pinimg.com/originals/a3/6b/42/a36b422bb2bebcbd77bba846b83ddf5d.png" alt="Book">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">
                            1
                        </h2>
                        <p class="product__description">
                            o
                        </p>
                    </div>
                    <div class="card__actions">
                        <button class="btn">
                            Add to cart
                        </button>
                    </div>
                </article>
            {{/each}}
        </div>
    {{ else }}
        <h1>No products found</h1>
    {{/if}}
</main>