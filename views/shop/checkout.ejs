<%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>
    <body>
        <%- include('../includes/navigation') %>
        <main>
            <ul class="cart__item-list">
                <% products.forEach(cartProducts => { %> 
                    <li class="cart__item">
                        <h1><%= cartProducts.productId.title %></h1>
                        <p>Quantity: <%= cartProducts.quantity %></p>
                    </li>
                <% }) %> 
            </ul>
            <div class="centered">
                <h2>Total: $<%= totalSum %> </h2>
            </div>
            <div class="centered">
                <a id="order-btn" class="btn">Finish and pay</a>
            </div>
        </main>
        <%- include('../includes/end')  %> 
        <script src="https://js.stripe.com/v3/"></script>
        <script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
        <script>
            var stripe = Stripe("pk_test_51JcwckHD46cEBk2ngSmVnr8SHralYAIJsdiSpFYab81Gj8wm3qXsm9yMFW8KO4XMZpvSL6fTf361VHW73lBta12a00e06g8mQj");
            var orderBtn = document.getElementById('order-btn');
            orderBtn.addEventListener('click', function () {
                stripe.redirectToCheckout({
                    sessionId: '<%= sessionId %>'
                })
            })
        </script>
