<%- include('../includes/head.ejs') %> 
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
        <!-- enclosing/wraping a certain block doesn't require the =, because the = is only used if you are setting an exact value -->
        <% if (products.length > 0) {%>
            <div class="grid">
                <% for (let product of products) { %> 
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title">
                                <%= product.title %> 
                            </h1>
                        </header>
                        <div class="card__image">
                            <img src="https://i.pinimg.com/originals/a3/6b/42/a36b422bb2bebcbd77bba846b83ddf5d.png" alt="Book">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">
                                1
                            </h2>
                            <p class="product__description">
                                o
                            </p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">
                                Add to cart
                            </button>
                        </div>
                    </article>
                <% } %> 
            </div>
        <% } else {%>
            <h1>No products found</h1>
        <% } %>  
    </main>
    <%- include('../includes/end.ejs') %> 
